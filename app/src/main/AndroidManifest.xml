<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo04.arquisoft.demo04">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VerPreguntasActivity" />
        <activity
            android:name=".PublicarPreguntaActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_subir_pregunta"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ResponderPreguntaActivity"
            android:label="@string/title_activity_responder_pregunta"
            android:theme="@style/AppTheme.NoActionBar"></activity>


        <activity android:name=".PublicarRespuestaActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>